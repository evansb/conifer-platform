# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 2 space indentation
[*.{scala,sbt}]
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[*.xml]
indent_style = space
indent_size = 4

